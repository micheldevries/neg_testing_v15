<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_company_form_inherit_report_extend" model="ir.ui.view">
        <field name="name">view.company.form.inherit.report.extend</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Layouts" name="report_layouts">
                    <group>
                        <group>
                            <field name="report_custom_header" widget="image"/>
                            <field name="report_custom_footer" widget="image"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
