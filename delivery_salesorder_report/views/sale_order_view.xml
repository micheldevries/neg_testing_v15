<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_order_form_inherit_delivery_salesorder_extend" model="ir.ui.view">
        <field name="name">view.order.form.inherit.delivery.salesorder.extend</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//page[@name='order_lines']/field/tree/field[@name='product_uom_qty']"
                position="after"
            >
                <field
                    name="qty_reserved"
                    attrs="{'column_invisible': [('parent.state', 'not in', ['sale', 'done'])]}"
                />
            </xpath>
            <xpath
                expr="//page[@name='order_lines']/field/form/group/group/label[@for='product_uom_qty']"
                position="after"
            >
                <field
                    name="qty_reserved"
                    attrs="{'column_invisible': [('parent.state', 'not in', ['sale', 'done'])]}"
                />
            </xpath>
        </field>
    </record>
</odoo>
