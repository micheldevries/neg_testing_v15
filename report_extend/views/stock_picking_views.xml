<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_picking_form_inherit_report_extend" model="ir.ui.view">
        <field name="name">view.picking.form.inherit.report.extend</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_open_label_layout']" position="after">
                <button
                    string="Print Collie Labels"
                    type="object"
                    name="action_open_collie_labels_wizard"
                />
            </xpath>
            <xpath expr="//field[@name='origin']" position="after">
                <field name="client_order_ref" string="Customer Reference" />
            </xpath>
        </field>
    </record>
</odoo>
